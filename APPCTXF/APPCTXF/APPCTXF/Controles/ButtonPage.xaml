<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="APPCTXF.Controles.ButtonPage">
    <ContentPage.Content>
        <StackLayout>

            <Button Text="1º Botao"
                    TextColor="Blue"
                    FontSize="24"
                    BorderColor="Red"
                    BorderRadius="20"
                    BorderWidth="5"
                    
                    BackgroundColor="White"
                    ></Button>

            <Button Text="2º Botao"></Button>
            
            <Button
                Image="pushbutton.png"
                BackgroundColor="Transparent"
                HorizontalOptions="Start"
                ></Button>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>